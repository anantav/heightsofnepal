<% include ../partials/header %>

<div class = "container">
    <div class = "row">
        <h1 style = "text-align: center;">Add new comment to <%= site.name %></h1>
        <div style = "width: 30%; margin: 25px auto;">
            <form action = "/sites/<%= site._id %>/comments" method = "POST">
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "comment[text]" placeholder = "text">
                </div>
                <div class = "form-group">
                    <button class = "btn btn-md btn-primary btn-block">Submit</button>
                </div>
            </form>
                <a class = "btn btn-md btn-warning btn-block" href = "/sites">Go Back!</a>
        </div>
    </div>
    
</div>

<% include ../partials/footer  %> 