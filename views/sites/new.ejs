<% include ../partials/header %>

<div class = "container fillup">
    <div class = "row">
        <h1 style = "text-align: center;">Create a new Site</h1>
        <div style = "width: 30%; margin: 25px auto;">
            <form enctype="multipart/form-data" action = "/sites" method = "POST">
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "name" placeholder = "name">
                </div>
                <div class = "form-group">
                    <input class="form-control" type="file" name="image" />
                </div>
                <div  class = "form-group">
                    <input class = "form-control" type = "text" name = "description" placeholder = "description">
                </div>
                <button class = "btn btn-md btn-primary btn-block">Submit</button>
            </form>
            <a class = "btn btn-md btn-warning btn-block" href = "/sites">Go Back!</a>
        </div>
    </div>
    
</div>

<% include ../partials/footer  %>